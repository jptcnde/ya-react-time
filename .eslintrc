{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "jest/globals": true
  },
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:jest/recommended",
    "prettier",
    "prettier/react",
    "prettier/standard"
  ],

  "plugins": [
    "react",
    "prettier",
    "jest"
  ],
  "rules": {
    "indent": ["error", 2],
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "semi": [1, "always"],
    "no-tabs" : [0],
    "no-unused-vars" : [1],
    "eol-last" : [0],
    "prefer-arrow-callback" : [0],
    "no-param-reassign" : [0],
    "consistent-return" : [0],
    "no-continue" : [0],
    "react/jsx-filename-extension" : [0],
    "react/jsx-indent-props" : [2, 2],
    "react/forbid-prop-types" : 0, // https://github.com/airbnb/javascript/issues/1099
    "react/jsx-indent": 0,
    "no-shadow": 0,
    "no-throw-literal": 0,
    "object-property-newline": 0,
    "import/no-cycle": 0,
    "react/destructuring-assignment": 0,
    "jsx-a11y/click-events-have-key-events": 0
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    },
    "import/resolver": {
      "webpack": {
        "config": "internals/webpack/webpack.config.dev.js"
      }
    }
  }
}
